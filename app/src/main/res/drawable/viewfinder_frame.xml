<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Semi-transparent mask around the frame -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Mask color -->
        </shape>
    </item>

    <!-- Transparent frame area (adjust size/position) -->
    <item
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="#FFF" /> <!-- Frame border -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>