<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Container for ID, Barcode, and Product Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ID Text -->
        <TextView
            android:id="@+id/list_item_archived_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <!-- Barcode Text with Bold Styling -->
        <TextView
            android:id="@+id/list_item_archived_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Product Name with Bold Styling -->
        <TextView
            android:id="@+id/list_item_archived_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

    <!-- Container for the Product Image and Delete Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <!-- ImageView for Product Image (Optional) -->
        <!-- <ImageView
            android:id="@+id/list_item_archived_product_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="16dp"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" /> -->

        <!-- Delete Button -->
        <Button
            android:id="@+id/list_item_archived_product_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_gravity="right" />
    </LinearLayout>

</LinearLayout>
